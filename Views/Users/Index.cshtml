
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>用户管理列表</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link href="/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <!-- jqgrid-->
    <link href="/css/plugins/jqgrid/ui.jqgridffe4.css?0820" rel="stylesheet">
    <link href="/css/animate.min.css" rel="stylesheet">
    <link href="/css/style.min862f.css?v=4.1.0" rel="stylesheet">
    <script type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>
    <link type="text/css" rel="stylesheet" href="/Content/amazeui.min.css" />
    <link type="text/css" rel="stylesheet" href="/Scripts/admin.css">
    <script type="text/javascript" src="/Scripts/amazeui.js"></script>
   
    <script src="/Scripts/kkpager-master/src/kkpager.js"></script>
    <link type="text/css" href="/Scripts/kkpager_blue.css" rel="stylesheet" />
    <script src="/Scripts/Users/UsersList.js"></script>
    <script type="text/javascript">
        jQuery(function () {
            UsersList.search();
            $("#selectedid").val(($('select').find('option').eq(0).prop('selected', true).val()));
            var $selected = $("#js-selected");
            $selected.on('change', function () {
                $("#selectedid").val($(this).find('option').eq(this.selectedIndex).val());
                Sub();
            });
        });
        function AddUser() {
            window.location.href = "/AlterUsersInfo";
        }
    </script>
</head>
<body class="gray-bg">
    <input type="hidden" id="selectedid" />
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>用户管理列表</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="am-g">
                            <div class="am-u-sm-12 am-u-md-12 ser">
                                <div class="am-fl"><input type="text" placeholder="请输入用户名" class="am-form-field am-radius" id="userName" style="width:185px; margin-right:10px; height:36px;" /></div>
                                <div class="am-fl" style="margin-right: 15px;">
                                    <select id="js-selected" data-am-selected="{searchBox: 1,maxHeight: 100}">
                                        <option value="0">全部</option>
                                        <option value="1">客服</option>
                                        <option value="2">导播</option>
                                        <option value="3">主持人</option>
                                        <option value="4">管理员</option>
                                    </select>
                                </div>
                                <div class="am-fl" style="margin-right:10px;"><button type="button" class="am-btn am-btn-primary  am-u-lg-centered" onclick="Sub()">查　询</button></div>
                                <div class="am-fl" style="margin-right:10px;"><button type="button" class="am-btn am-btn-primary  am-u-lg-centered" onclick="AddUser()">新增</button></div>
                                @*<div class="am-fl" style="margin-right:10px;"><button type="button" class="am-btn am-btn-primary  am-u-lg-centered" onclick="method()">导出</button></div>*@
                            </div>

                        </div>
                        <hr>
                        <div class="jqGrid_wrapper">
                            <div class="am-g">
                                <div class="am-u-sm-12" style="min-height:200px;">
                                    <table class="am-table am-table-striped am-table-hover table-main">
                                        <thead>
                                            <tr>
                                                <th class="table-title">用户名</th>
                                                <th class="table-title">联系电话</th>
                                                <th class="table-author am-hide-sm-only">职务</th>
                                                <th class="table-author am-hide-sm-only" colspan="2">操作</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tables"></tbody>
                                    </table>
                                    <div id="kkpager"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--删除开始-->
    <div class="am-modal am-modal-prompt" tabindex="-1" id="delteUser">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">删除用户</div>
            <div class="am-modal-bd">
                你，确定要删除这条记录吗？
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn" data-am-modal-cancel>取消</span>
                <span class="am-modal-btn" data-am-modal-confirm>确定</span>
            </div>
        </div>
    </div>
    <!--删除结束-->
    <!--重置开始-->
    <div class="am-modal am-modal-prompt" tabindex="-1" id="updateUser">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">重置用户密码</div>
            <div class="am-modal-bd">
                你，确定要重置该用户密码吗？重置密码为：123456
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn" data-am-modal-cancel>取消</span>
                <span class="am-modal-btn" data-am-modal-confirm>确定</span>
            </div>
        </div>
    </div>
    <!--重置结束-->
</body>
